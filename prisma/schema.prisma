generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid      String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  id       Int       @unique @default(autoincrement()) // optional legacy

  name     String    @db.VarChar(45)
  email    String    @unique @db.VarChar(45)
  password String    @db.VarChar(500)

  sessions Sessions[]
}

model Sessions {
  uid        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  id         Int       @unique @default(autoincrement()) // optional legacy

  userUid    String?   @db.Uuid
  device     String?   @db.VarChar(45)
  lastActive DateTime  @default(now()) @db.Timestamp(0)
  createdAt  DateTime? @default(now()) @db.Timestamp(0)

  // CORRECT: @relation must be on a single line
  user       User?     @relation(fields: [userUid], references: [uid], onDelete: NoAction, onUpdate: NoAction)

  @@index([userUid])
  @@index([device, lastActive, userUid])
}